# VEIL Environment Configuration
# Copy this file to .env and fill in production values

# Environment: dev | staging | prod
ENV=dev

# Internal handshake token between Proxy and Engine
# SECURITY: Generate a strong, unique token for production!
# Example: openssl rand -hex 32
INTERNAL_TOKEN=your-production-secret-token-here

# Authorized Proxy Image Hash (from: docker inspect --format='{{.RepoDigests}}' mitmproxy/mitmproxy:10.2.0)
AUTHORIZED_PROXY_HASH=sha256:54930c87ec0ee025a42dd2bb80d04de0ef4e571b34e2d51cd93be501c7b8e020

# Redis Connection
REDIS_URL=redis://redis:6379

# Ollama LLM Service
OLLAMA_URL=http://veil-ollama:11434/api/generate

# OPA Policy Engine
OPA_URL=http://veil-opa:8181/v1/data/veil/allow
